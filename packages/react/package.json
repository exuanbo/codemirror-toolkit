{
  "name": "@codemirror-toolkit/react",
  "version": "0.1.0",
  "description": "Hooks and utilities for using CodeMirror in React",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "sideEffects": false,
  "scripts": {
    "clean": "run clean:types && run -T rimraf dist",
    "clean:types": "run -T tsc -b --clean",
    "build": "run build:types && run build:bundle",
    "build:types": "run -T tsc -b",
    "build:bundle": "run -T vite build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/codemirror-toolkit.git",
    "directory": "packages/react"
  },
  "keywords": [
    "codemirror",
    "toolkit",
    "codemirror-toolkit",
    "codemirror-toolkit-react",
    "react",
    "react-codemirror",
    "codemirror-react"
  ],
  "author": "exuanbo <exuanbo@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/codemirror-toolkit/issues"
  },
  "homepage": "https://github.com/exuanbo/codemirror-toolkit/tree/main/packages/react#readme",
  "dependencies": {
    "@types/use-sync-external-store": "^0.0.3",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "@types/react": "^17.0.0 || ^18.0.0",
    "react": "^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.7.1",
    "@types/react": "^18.0.26",
    "react": "^18.2.0"
  }
}
