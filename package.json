{
  "name": "@codemirror-toolkit/monorepo",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/react/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint . --cache --fix",
    "lint:ci": "eslint . --cache --cache-location ./node_modules/.cache/eslint/.eslintcache --max-warnings 0",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "clean": "yarn workspaces foreach -pt --exclude '@codemirror-toolkit/example-*' run clean",
    "build": "yarn workspaces foreach -pt --exclude '@codemirror-toolkit/example-*' run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/eslint": "^8.4.10",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.26.3"
  }
}
