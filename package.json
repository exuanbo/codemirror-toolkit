{
  "name": "@codemirror-toolkit/monorepo",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/react/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -pt --exclude '@codemirror-toolkit/example-*' run clean",
    "build": "yarn workspaces foreach -pt --exclude '@codemirror-toolkit/example-*' run build",
    "lint": "eslint . --cache --fix",
    "lint:ci": "eslint . --cache --fix --max-warnings 0",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/eslint": "^8.4.10",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  }
}
